{
  "compilerOptions": {
    "strict": true,
    "target": "es2017",
    "module": "es2020",
    "lib": ["es2018", "dom"],
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "dist/",
    "skipLibCheck": true
  },
  "include": ["src/**/*", "esbuild/global.d.ts"],
  "exclude": ["node_modules"]
}
